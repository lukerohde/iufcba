<p id="notice"><%= notice %></p>

<h1>Listing Recs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tags</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Attachment</th>
      <th>Coverage</th>
      <th>Product service</th>
      <th>Union</th>
      <th>Company</th>
      <th>Local union contact</th>
      <th>National union contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recs.each do |rec| %>
      <tr>
        <td><%= rec.name %></td>
        <td><%= rec.tags %></td>
        <td><%= rec.start_date %></td>
        <td><%= rec.end_date %></td>
        <td><%= rec.attachment %></td>
        <td><%= rec.coverage %></td>
        <td><%= rec.product_service %></td>
        <td><%= rec.union %></td>
        <td><%= rec.company %></td>
        <td><%= rec.local_union_contact %></td>
        <td><%= rec.national_union_contact %></td>
        <td><%= link_to 'Show', rec %></td>
        <td><%= link_to 'Edit', edit_rec_path(rec) %></td>
        <td><%= link_to 'Destroy', rec, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

