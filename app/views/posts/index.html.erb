<p id="notice"><%= notice %></p>

<h1><%= t('.listing_posts') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.body') %></th>
      <th><%= t('.attachment') %></th>
      <th><%= t('.person') %></th>
      <th><%= t('.parent') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.attachment %></td>
        <td><%= post.person %></td>
        <td><%= post.parent %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
