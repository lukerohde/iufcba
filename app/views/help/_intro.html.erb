<% if notice.present? %>
	<p id="notice" class="alert alert-success text-center"><strong><%= notice %></strong></p>
<% end %>

<div class="jumbotron text-center" style="padding-left:0px; padding-right:0px">
	<div class="container" style="padding-left:0px; padding-right:0px;">
		<div class="col-sm-2 hidden-xs">
			<img src="<%=image_path('iuf_logo.png')%>" style="height:100%;x-overflow:hidden;">
		</div>
		<div class="col-sm-10">
			<h1 class="no-left-margin no-right-margin text-right">breweryworker.org</h1>
			<p class="no-left-margin text-right no-right-margin">Bringing the affiliates of the IUF brewery division closer together</p>
			<p>
				<%=link_to "Request An Invitation", new_help_request_invite_path, class: "btn btn-large btn-default pull-right" %>
			</p>
		</div>
		
	</div>
</div>
